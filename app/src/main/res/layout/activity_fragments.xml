<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".DisplayFragments">


    <fragment
            android:name="com.example.sithum.testapplication.FragmentOne"
            android:layout_width="320dp"
            android:layout_height="250dp"
            android:id="@+id/top_fragment"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintHorizontal_bias="0.494"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="32dp">


    </fragment>

    <View
            android:layout_width="match_parent"
            android:layout_height="3dp"
            android:background="@android:color/darker_gray"
            android:layout_marginTop="17dp"
            app:layout_constraintTop_toBottomOf="@+id/top_fragment"
            android:layout_marginBottom="18dp"
            app:layout_constraintBottom_toTopOf="@+id/bottom_fragment"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintEnd_toEndOf="parent"/>

    <fragment
            android:name="com.example.sithum.testapplication.FragmentTwo"
            android:layout_width="320dp"
            android:layout_height="250dp"
            android:id="@+id/bottom_fragment"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintHorizontal_bias="0.494"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="32dp"
            >

    </fragment>

</android.support.constraint.ConstraintLayout>